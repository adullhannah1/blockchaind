extends layout

block content
  .container
    .row
      .col-md-12
        h1= __('Block Explorer')
        p.lead= __('Explore blocks, transactions, and addresses on the blockchain')
    
    .row
      .col-md-8
        .panel.panel-default
          .panel-heading
            h3.panel-title Search
          .panel-body
            .input-group
              input.form-control#search-input(type='text', placeholder='Enter block hash, transaction hash, or address...')
              .input-group-btn
                button.btn.btn-primary#search-btn Search
        
        .panel.panel-default
          .panel-heading
            h3.panel-title
              span#explorer-title Latest Blocks
              .btn-group.pull-right
                button.btn.btn-xs.btn-default#view-blocks.active Blocks
                button.btn.btn-xs.btn-default#view-transactions Transactions
                button.btn.btn-xs.btn-default#view-addresses Addresses
          .panel-body#explorer-content
            .table-responsive
              table.table.table-striped#blocks-table
                thead
                  tr
                    th Block #
                    th Hash
                    th Timestamp
                    th Transactions
                    th Miner
                    th Size
                tbody#blocks-tbody
        
        .panel.panel-default#detail-panel(style='display: none;')
          .panel-heading
            h3.panel-title#detail-title Details
          .panel-body#detail-content
      
      .col-md-4
        .panel.panel-default
          .panel-heading
            h3.panel-title Network Statistics
          .panel-body
            .row
              .col-xs-6
                .stat-item
                  .stat-value#total-blocks 0
                  .stat-label Total Blocks
              .col-xs-6
                .stat-item
                  .stat-value#total-transactions 0
                  .stat-label Total Transactions
            .row
              .col-xs-6
                .stat-item
                  .stat-value#network-hashrate 0 TH/s
                  .stat-label Network Hashrate
              .col-xs-6
                .stat-item
                  .stat-value#block-time 15s
                  .stat-label Avg Block Time
            .row
              .col-xs-12
                .stat-item
                  .stat-value#difficulty 1,234,567
                  .stat-label Current Difficulty
        
        .panel.panel-default
          .panel-heading
            h3.panel-title Recent Activity
          .panel-body#recent-activity
            p.text-muted Loading recent activity...
        
        .panel.panel-default
          .panel-heading
            h3.panel-title Top Addresses
          .panel-body#top-addresses
            p.text-muted Loading top addresses...

  script.
    $(function() {
      initializeBlockExplorer();
    });